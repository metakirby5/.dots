# Globals
export DOTS=~/.dots
export LOCAL=~/.local
export WORKSPACE=~/code
export MY_SCRIPTS="$WORKSPACE/scripts"

# Pull in local defs
LOCAL_CONF="$LOCAL/shell/local.sh"
[ -f "$LOCAL_CONF" ] && source "$LOCAL_CONF"

# Paths
for p in \
    "$LOCAL/bin" \
    "$MY_SCRIPTS"; do
  [ -d "$p" ] && PATH="$PATH:$p"
done
export PATH

# Anything that's important to do first
PRE_CONF="$LOCAL/shell/pre.sh"
[ -f "$PRE_CONF" ] && source "$PRE_CONF"

# Configs
for rc in \
    "$LOCAL/shell/config.sh"; do
  [ -f "$rc" ] && source "$rc"
done

# Completions
USER_COMPL=~/.bash_completion.d
[ -d "$USER_COMPL" ] && for f in "$USER_COMPL"/*; do
  source "$f"
done

# Reset the exit code
true
